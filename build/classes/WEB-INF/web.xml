<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>005_Java_Web</display-name>
  
  <!--  servlets -->
  <servlet>
 	 <servlet-name>despedida</servlet-name>
  	<servlet-class>com.curso.servlets.DespedidaServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>despedida</servlet-name>
    <url-pattern>/despedida</url-pattern>
     <url-pattern>/despedida2</url-pattern>
  </servlet-mapping>
  
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>saludo</welcome-file>
  </welcome-file-list>

  <session-config>
  	<session-timeout>30</session-timeout>
  </session-config>
</web-app>